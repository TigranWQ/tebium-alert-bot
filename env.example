# TeBium Alert Bot - Пример конфигурации

# Telegram Bot настройки
BOT_TOKEN=your_bot_token_here
WEBHOOK_SECRET=your_webhook_secret_key
WEBHOOK_PORT=8082

# База данных
DATABASE_URL=sqlite:///data/alerts.db

# Настройки алертов
ALERT_CHAT_ID=your_chat_id_here
ENABLE_ALERTS=true

# Настройки уведомлений
ALERT_COOLDOWN=60
MAX_ALERTS_PER_HOUR=100

# Настройки форматирования
ENABLE_EMOJI=true
ENABLE_MARKDOWN=true

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/alert_bot.log

# API настройки для интеграции
ANALYTICS_SERVER_URL=http://localhost:8081
MAIN_BOT_URL=http://localhost:8080

# Настройки retry
MAX_RETRIES=3
RETRY_DELAY=5
